/* 水平间距 */
.uni-margin-wrap {
  width: 690rpx;
  width: 100%;
}
.uni-margin-wrap .swiper {
  height: 300rpx;
}
.uni-margin-wrap .swiper .swiper-item {
  display: block;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}
.uni-margin-wrap .swiper .swiper-item image {
  width: 100%;
  height: 100%;
}
.container {
  background-color: #fff;
  display: flex;
}
.container .left {
  position: relative;
  width: 200px;
  height: 150px;
  background-color: #7bd8a8;
  border-radius: 5px;
  margin: 20px 4px 20px 10px;
}
.container .left ._h1 {
  color: #fff;
  font-size: 20px;
  margin-left: 15px;
  margin-top: 20px;
}
.container .left ._h2 {
  color: #fff;
  font-size: 15px;
  margin-left: 15px;
  margin-top: 10px;
}
.container .left .left-icon {
  position: absolute;
  bottom: 5px;
  right: 5px;
}
.container .right {
  width: 200px;
  height: 150px;
  background-color: #65c3f3;
  border-radius: 5px;
  margin: 20px 10px 20px 4px;
  text-align: center;
}
.container .right ._h1 {
  color: #fff;
  font-size: 25px;
}
.new-state {
  margin-top: 10px;
  padding-bottom: 15px;
  padding-top: 5px;
  background-color: #fff;
}
.new-state .top {
  margin-top: 10px;
}
.new-state .top ._h1 {
  font-size: 25px;
  margin-left: 10px;
}
.new-state .state-container {
  display: flex;
}
.new-state .state-container .left-img {
  width: 150px;
  height: 100px;
  margin-left: 10px;
  margin-top: 10px;
}
.new-state .state-container .left-img image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.new-state .state-container .right-text {
  margin-left: 20px;
  margin-top: 10px;
}
.new-state .state-container .right-text ._h1 {
  font-size: 20px;
}
.new-state .state-container .right-text ._span {
  display: inline-block;
  margin-top: 15px;
  color: #ccc;
}

