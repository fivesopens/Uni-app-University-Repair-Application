/* 水平间距 */
page {
  background-color: #fff;
}
.login_header {
  text-align: center;
}
.login_body {
  width: 100%;
  margin-top: 25px;
}
.login_body .uni-forms-item {
  padding: 0;
  border-top: 0;
}
.login_body .uni-forms-item .uni-forms-item__content .uni-forms-item__error {
  top: -4px;
  left: 10px;
}
.login_body .uni-forms-item .uni-easyinput {
  border-bottom: 1px solid  #dcdcdc;
  margin-bottom: 10px;
  height: 50px;
}
.login_body .uni-forms-item .uni-easyinput input {
  margin-top: 11px;
}
.login_body .login_btn {
  width: 100%;
  margin-top: 60px;
}
.login_body .login_btn button {
  width: 90%;
  height: 50px;
  border-radius: 50px;
}
.login_footer {
  width: 100%;
  height: 100%;
  margin-top: 15px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.login_footer .ctx_pwd {
  margin-top: 10%;
  color: #007aff;
  font-size: 13px;
  margin-bottom: 50px;
}
.login_footer .ctx_req {
  margin-top: 15%;
  margin-bottom: 50px;
}
.login_footer .ctx_req ._span:nth-child(1) {
  color: #333;
  font-size: 15px;
}
.login_footer .ctx_req ._span:nth-child(2) {
  color: #007aff;
  font-size: 13px;
}
button[type=primary] {
  background-color: #007aff;
  font-size: 24px;
  line-height: 50px;
}

